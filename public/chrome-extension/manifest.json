{
  "manifest_version": 3,
  "name": "Perfect Money",
  "version": "1.0.0",
  "description": "Decentralized Payment Made Just Perfect - Access your PM wallet directly from Chrome",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Perfect Money"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://perfectmoney.cc/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
